---
import Header from "../components/container/Header.astro";
import Footer from "../components/container/Footer.astro";

import { infoPages } from "../log/infoPages";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={infoPages.descriptionMain} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon" />
    <title>prietodev - {title}</title>
  </head>
  <body>
    <div
      class="min-h-screen mx-auto overflow-hidden bg-gradient-to-tr from-slate-950 to-slate-900"
    >
      <Header />
      <main class="mt-32 px-4 sm:px-8 md:px-16 lg:px-32 xl:px-64">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
